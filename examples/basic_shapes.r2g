# 基础图形示例
scene 800 600 "basic_shapes"

# 创建圆形
create circle c1 1.5
set c1.color = "#3498DB"
set c1.position = (-2, 0)

# 创建三角形
create triangle t1 0 -1 2 -1 1 1
set t1.color = "#E74C3C"

# 创建矩形
create rectangle r1 2 1.5
set r1.color = "#27AE60"
set r1.position = (2, 0)

# 创建标题
create text title "基础图形示例" 24
set title.position = (0, 3)
set title.color = "#2C3E50"

# 渲染和保存
render
save "basic_shapes"
