// 文本重构验证脚本
scene 800 600 "text_refactor_test"

// 测试简单文本
create text simple "Hello World" 32 (400, 500)

// 测试中文文本
create text chinese "你好世界" 28 (400, 400)
set chinese.color = "#FF0000"

// 测试位置设置
create text positioned "定位文本" 24 (200, 300)
set positioned.color = "#0000FF"

// 测试透明度
create text transparent "半透明文本" 20 (600, 300)
set transparent.color = "#00FF00"
set transparent.opacity = 0.5

// 测试多行内容
create text info1 "重构后的文本系统" 18 (400, 200)
create text info2 "支持更好的位置管理" 18 (400, 180)
create text info3 "改进的颜色处理" 18 (400, 160)

set info1.color = "#333333"
set info2.color = "#666666"
set info3.color = "#999999"

save "text_refactor_verification"
render
